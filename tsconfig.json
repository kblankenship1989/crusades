{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "./src/**/*.spec.tsx",
    "./src/**/*.spec.ts",
    "./src/themes/**/*.js"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "jest.d.ts",
    "jest.d.ts",
    "App.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
